@model Model.CLIENTE

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="faq">
    <div class="container">
        <h3 class="head" style="padding-bottom: 20px;">Cadastro</h3>
        <div class="col-lg-12">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formCadastro" }))
                {

                    @Html.HiddenFor(x => x.ClienteId)
                    @Html.HiddenFor(x => x.DataCadastro)

                    <div class="col-lg-12">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", @placeholder = "CPF", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @*@Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Senha", @required = "required" } })*@
                            @Html.Password("ssenha", "", new { @class = "form-control", @data_minlength = "6", @placeholder = "Senha" })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.Password("csenha", "", new { @class = "form-control", @data_minlength = "6", @placeholder = "Confirmação de senha" })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @if (Model != null)
                            {
                                @Html.TextBox("DataNasc_", Model.DataNasc.ToString("dd/MM/yyyy"), new { @class = "form-control", @placeholder = "Data de Nascimento", @required = "required" })
                            }
                            else
                            {
                                @Html.TextBox("DataNasc_", null, new { @class = "form-control", @placeholder = "Data de Nascimento", @required = "required" })

                            }
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.DropDownList("Sexo", new List<SelectListItem>
                        {
                            new SelectListItem() {Text = "Masculino", Value="Masculino" },
                            new SelectListItem() {Text = "Feminino", Value="Feminino" }
                        }, new { @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Telefone", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "form-control", @placeholder = "Celular", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control", @placeholder = "CEP", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-7">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Logradouro", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @placeholder = "N°", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control", @placeholder = "Complemento" } })
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.UF, new { htmlAttributes = new { @class = "form-control", @placeholder = "UF", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cidade", @required = "required" } })
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="input-group w3_w3layouts">
                            <span class="input-group-addon" id="basic-addon1"> </span>
                            @Html.EditorFor(model => model.Bairro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Bairro", @required = "required" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @*<div class="col-md-offset-2 col-md-10">*@
                        <div class="col-lg-12">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>

<script src="~/Scripts/Ajax/Cadastro.js"></script>