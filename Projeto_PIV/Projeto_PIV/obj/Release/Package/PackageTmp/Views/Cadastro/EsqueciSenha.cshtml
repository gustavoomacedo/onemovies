@model Model.CLIENTE
@{
    ViewBag.Title = "EsqueciSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="faq">
    <div class="container">
        <h3 class="head" style="padding-bottom: 20px;">Resgate de senha</h3>
        <div class="col-lg-12">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formEsqueci" }))
            {
                @Html.AntiForgeryToken()

                @Html.Hidden("ClienteId")

                <div class="col-lg-6">
                    <div class="input-group w3_w3layouts">
                        <span class="input-group-addon" id="basic-addon1"> </span>
                        @*@Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @placeholder = "Senha", @required = "required" } })*@
                        @Html.Password("Senha", "", new { @class = "form-control", @data_minlength = "6", @placeholder = "Nova Senha" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="input-group w3_w3layouts">
                        <span class="input-group-addon" id="basic-addon1"> </span>
                        @Html.Password("csenha", "", new { @class = "form-control", @data_minlength = "6", @placeholder = "Confirmação de nova senha" })
                    </div>
                </div>

                <div class="form-group">
                    @*<div class="col-md-offset-2 col-md-10">*@
                    <div class="col-lg-12">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/Ajax/EsqueciSenha.js"></script>