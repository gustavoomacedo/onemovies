@model Model.FILME_IMAGEM
@{
    ViewBag.Title = "Imagens";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Painel de controle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Admin/Filme"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <p>Cadastro de Imagem de Filmes</p>
            </div>
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-xs-12">

                        @using (Html.BeginForm("Imagens", "Filme", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(model => model.FilmeId)
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <br />


                            if (Model.ImagemBanner == null)
                            {
                                <div class="row form-group-custom">
                                    <div class="col-lg-12">
                                        <strong>Imagem Banner: * <i>1000x675</i></strong>
                                        <input id="ImagemBanner" title="Upload Banner" type="file" name="ImagemBanner" />
                                    </div>
                                </div>
                            }
                            else
                            {
                                <img src="~/Content/images/uploads/@Model.ImagemBanner" class="img img-responsive" />
                            }


                            <br />

                            if (Model.ImagemLogo == null)
                            {
                            <div class="row form-group-custom">
                                <div class="col-lg-12">
                                    <strong>Imagem Logo: * <i>1090x1600</i></strong>
                                    <input id="ImagemLogo" title="Upload Logo" type="file" name="ImagemLogo" />
                                </div>
                            </div>
                            }
                            else
                            {
                                <img src="~/Content/images/uploads/@Model.ImagemLogo" class="img img-responsive" />
                            }
                            <div class="row form-group-custom">
                                <div class="col-lg-12">
                                    <input type="submit" value="Adicionar Imagens" class="btn btn-warning" />
                                </div>
                            </div>

                            <hr />
                        }

                        <!-- /.box -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->